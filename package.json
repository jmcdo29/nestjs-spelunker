{
  "name": "nestjs-spelunker",
  "version": "0.4.1",
  "description": "A NestJS Module to do a deep dive through the dependency tree structure and print the dependencies.",
  "author": {
    "name": "Jay McDoniel",
    "email": "me@jaymcdoneil.dev"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "preversion": "yarn format && yarn lint && yarn build",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint '{libs,test}/**/*.ts' --fix",
    "test": "c8 uvu -r @swc/register test 'spec\\.ts$'"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@golevelup/ts-jest": "^0.2.1",
    "@nestjs/cli": "^8.2.3",
    "@nestjs/common": "^8.4.1",
    "@nestjs/core": "^8.4.1",
    "@nestjs/platform-express": "^8.4.1",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.1",
    "@ogma/nestjs-module": "^3.2.0",
    "@swc/core": "^1.2.155",
    "@swc/register": "^0.1.10",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "c8": "^7.11.0",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.1.0",
    "dequal": "^2.0.2",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.19.1",
    "express": "^4.17.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "typescript": "^4.6.2",
    "uvu": "^0.5.3"
  },
  "peerDependencies": {
    "@nestjs/common": ">6.11.0",
    "@nestjs/core": ">6.11.0",
    "reflect-metadata": "^0.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
